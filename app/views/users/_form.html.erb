<%= form_for @user, :html=> { class: 'form-horizontal' } do |f| %>
  <%= render partial: "shared/errors", locals: { object: @user} %>
  <fieldset>
  <legend>Enter User Details</legend>

  <div class="form-group">
    <%= f.label :name, 'Name:', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, 'Password:', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.password_field :password, class: 'form-control' %>
    </div>
  </div>

  
  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirm:', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email:', class: 'col-lg-2 control-label' %>
    <div class="col-lg-10">
      <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div> <br>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>

  </fieldset>
<% end %>
  